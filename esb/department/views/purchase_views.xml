<odoo>
    <!-- Copyright 2020 Ecosoft Co., Ltd (http://ecosoft.co.th/)-->
    <!-- Purchase Order Form -->
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group//field[@name='company_id']" position="after">
                <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>
        </field>
    </record>
    <!-- Purchase Order Search -->
    <record id="view_purchase_order_filter" model="ir.ui.view">
        <field name="name">request.quotation.select</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="department_id"/>
            </xpath>
            <xpath expr="//filter[@name='representative']" position="after">
                <filter string="Department" name="department" domain="[]" context="{'group_by': 'department_id'}"/>
            </xpath>
        </field>
    </record>
    <record id="purchase_order_view_search" model="ir.ui.view">
         <field name="name">purchase.order.select</field>
         <field name="model">purchase.order</field>
         <field name="inherit_id" ref="purchase.purchase_order_view_search" />
         <field name="arch" type="xml">
             <xpath expr="//field[@name='user_id']" position="after">
                 <field name="department_id"/>
             </xpath>
             <xpath expr="//filter[@name='representative']" position="after">
                 <filter string="Department" name="department_id" domain="[]" context="{'group_by': 'department_id'}"/>
             </xpath>
         </field>
    </record>
    <!-- Purchase Order Tree -->
    <record id="purchase_order_tree" model="ir.ui.view">
        <field name="name">purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="department_id" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="purchase_order_view_tree" model="ir.ui.view">
        <field name="name">purchase.order.view.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="department_id" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
