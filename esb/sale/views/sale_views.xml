<odoo>
    <!-- Copyright 2020 Ecosoft Co., Ltd (http://ecosoft.co.th/)-->
    <record id="sot_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_order_type.sot_view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type_id']" position="before">
                <field name="so_created" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='type_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('so_created', '=', True)]}</attribute>
            </xpath>
            <!-- Add discount fields -->
            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <field name="discount_last" attrs="{'readonly': [('state', 'in' , ('done', 'cancel'))]}"/>
                <field name="discount_special" attrs="{'readonly': [('state', 'in' , ('done', 'cancel'))]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="before">
                <field name="subtotal_no_disc" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//kanban//field[@name='price_subtotal']" position="before">
                <field name="subtotal_no_disc" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//kanban//field[@name='price_subtotal']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <!-- Add bank account -->
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="partner_bank_id"/>
            </xpath>
        </field>
    </record>

</odoo>
