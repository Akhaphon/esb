<odoo>
    <!-- Copyright 2020 Ecosoft Co., Ltd (http://ecosoft.co.th/)-->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_invoice_triple_discount.invoice_triple_discount_form_view" />
        <field name="arch" type="xml">
            <!-- Add packing_list_id on account.move view -->
            <xpath expr="//field[@name='ref']" position="after">
                <field name="packing_list_id"/>
            </xpath>
            <!-- Add discount fields -->
            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <field name="discount_last" attrs="{'readonly': [('state', '!=' , 'draft')]}"/>
                <field name="discount_special" attrs="{'readonly': [('state', '!=' , 'draft')]}"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_subtotal']" position="before">
                <field name="subtotal_no_disc" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='price_subtotal']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//kanban//field[@name='price_subtotal']" position="before">
                <field name="subtotal_no_disc" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//kanban//field[@name='price_subtotal']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <!-- Hide discount 2, 3 -->
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount2']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='discount3']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//form//field[@name='discount2']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//form//field[@name='discount3']" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
            </xpath>
        </field>
    </record>

</odoo>
